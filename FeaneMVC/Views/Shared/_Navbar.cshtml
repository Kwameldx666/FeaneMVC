<div class="hero_area">
    <div class="bg-box">
        <img src="~/images/hero-bg.jpg" alt="">
    </div>
    <!-- header section starts -->
    <header class="header_section">
        <div class="container">
            <nav class="navbar navbar-expand-lg custom_nav-container">
                <a class="navbar-brand" href="/home/index">
                    <span>
                        Feane
                    </span>
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class=""> </span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reservation" asp-action="Book">Book Table</a>
                        </li>
                    </ul>

                    <div class="user_option">
                        <a href="/account/profile" class="user_link">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </a>
                        <a class="cart_link" href="/cart/cart" title="View Cart">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 457.627 457.627" width="24" height="24" fill="currentColor">
                                <path d="M439.296,84.91c-1.024,0-2.56-0.512-4.096-0.512H112.64l-5.12-34.304C104.448,27.566,84.992,10.67,61.952,10.67H20.48
            C9.216,10.67,0,19.886,0,31.15c0,11.264,9.216,20.48,20.48,20.48h41.472c2.56,0,4.608,2.048,5.12,4.608l31.744,216.064
            c4.096,27.136,27.648,47.616,55.296,47.616h212.992c26.624,0,49.664-18.944,55.296-45.056l33.28-166.4
            C457.728,97.71,450.56,86.958,439.296,84.91z" />
                            </svg>
                        </a>
                        <a href="/home/index" class="order_online">
                            Order Online
                        </a>

                        @* Conditional button for admins and moderators *@
                        @if (Context.Session.GetString("UserRole") == "Admin" || Context.Session.GetString("UserRole") == "Moderator")
                        {
                            <a href="@Url.Action("Index", "Dish")" class="admin_button">
                                Manage Dishes
                            </a>
                            <a href="@Url.Action("Index", "User")" class="admin_button">
                                Manage Users
                            </a>
                        }
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!-- end header section -->
</div>

<style>
    .hero_area {
        position: relative;
        z-index: 1;
        background-size: cover;
    }

    .header_section {
        padding: 20px 0;
    }

    .navbar-brand {
        font-size: 2rem;
        font-weight: bold;
        color: #fff;
    }

    .navbar-nav .nav-link {
        font-size: 1.2rem;
        color: #fff;
        margin-right: 20px;
        transition: color 0.3s ease;
    }

        .navbar-nav .nav-link:hover {
            color: #f39c12;
        }

    .user_option a {
        color: #fff;
        margin-right: 15px;
        font-size: 1.1rem;
        transition: color 0.3s ease;
    }

        .user_option a:hover {
            color: #f39c12;
        }

    .order_online {
        display: inline-block;
        background: linear-gradient(90deg, #f39c12, #f1c40f);
        color: white;
        padding: 10px 20px;
        border-radius: 50px;
        font-size: 16px;
        font-weight: bold;
        text-transform: uppercase;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.3s ease;
        border: 2px solid transparent;
    }

        .order_online:hover {
            background: linear-gradient(90deg, #f1c40f, #f39c12);
            transform: scale(1.05);
            border-color: #f1c40f;
        }

    .admin_button {
        display: inline-block;
        background: #e74c3c;
        color: white;
        padding: 10px 20px;
        border-radius: 50px;
        font-size: 16px;
        font-weight: bold;
        text-transform: uppercase;
        text-decoration: none;
        transition: background 0.3s ease, transform 0.3s ease;
        border: 2px solid transparent;
        margin-left: 10px;
    }

        .admin_button:hover {
            background: #c0392b;
            transform: scale(1.05);
            border-color: #c0392b;
        }

    .cart_link {
        margin-right: 15px;
    }

    .user_link {
        margin-right: 15px;
    }
</style>
